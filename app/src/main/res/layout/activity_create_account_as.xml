<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@drawable/drive1"
    >


    <RelativeLayout
        android:id="@+id/toLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        >

        <include
            android:id="@+id/toolbar2"
            layout="@layout/toolbar2"
            android:title="@string/emptyTitleToolbar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginBottom="21dp"
            android:padding="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="115dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="50dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:focusable="auto"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"

                android:visibility="visible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="auto"
                android:layout_marginTop="70dp"

                android:gravity="top|center"
                android:text="@string/create_account_as"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnMobileUser"
                style="@style/ButtonStyleTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fitsSystemWindows="true"
                android:text="@string/mobile_user"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:typeface="serif"

                android:background="@drawable/rounded_button_blue"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnSecurityGuard"
                style="@style/ButtonStyleOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/security_guard"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:typeface="serif"
                android:background="@drawable/rounded_button"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="45dp"
                android:src="@drawable/logo_smartsdk" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>